<h1>Listing occasions</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Recurring</th>
    <th>Desc</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @occasions.each do |occasion| %>
  <tr>
    <td><%= occasion.id %></td>
    <td><%= occasion.name %></td>
    <td><%= occasion.recurring %></td>
    <td><%= occasion.desc %></td>
    <td><%= link_to 'Show', occasion %></td>
    <td><%= link_to 'Edit', edit_occasion_path(occasion) %></td>
    <td><%= link_to 'Destroy', occasion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

